<Controls:MetroTabItem x:Class="K5BZI_Logger.Views.NetworkTab"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:dgControls="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
            xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
            mc:Ignorable="d"
            Padding="2"
            BorderThickness=".5" 
            BorderBrush="Navy"
            Background="White">
    <Controls:MetroTabItem.Header>
        <StackPanel Orientation="Horizontal">
            <Image 
                Source="/Images/Quill.png"
                Height="24"
                Width="24"/>
            <TextBlock 
                Text="Network" 
                Foreground="DarkSlateBlue"
                FontSize="18"
                FontFamily="Tahoma"
                VerticalAlignment="Bottom"/>
        </StackPanel>
    </Controls:MetroTabItem.Header>
    <Controls:MetroTabItem.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="850"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid 
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Button
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Margin="10,0,0,0"
                    Content="Send Message"
                    Width="120"
                    Height="30"
                    Foreground="Navy"
                    FontSize="12"
                    FontFamily="Tahoma"
                    Command="{Binding SendMessageCommand}"/>
            </Grid>
        </Grid>
    </Controls:MetroTabItem.Content>
</Controls:MetroTabItem>
