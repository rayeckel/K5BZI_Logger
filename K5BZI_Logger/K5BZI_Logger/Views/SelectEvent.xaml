<simpleChildWindow:ChildWindow
    IsOpen="{Binding Model.IsOpen}"
    xmlns:simpleChildWindow="http://metro.mahapps.com/winfx/xaml/simplechildwindow" 
    x:Class="K5BZI_Logger.Views.SelectEvent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodel="clr-namespace:K5BZI_ViewModels;assembly=K5BZI_ViewModels"
    Height="770" Width="900"
    mc:Ignorable="d"
    Title="Select Log">
    <simpleChildWindow:ChildWindow.Resources>
        <viewmodel:SelectEventViewModel x:Key="SelectEventViewModel" />
    </simpleChildWindow:ChildWindow.Resources>
    <simpleChildWindow:ChildWindow.DataContext>
        <Binding Source="{StaticResource SelectEventViewModel}" />
    </simpleChildWindow:ChildWindow.DataContext>
    <simpleChildWindow:ChildWindow.OverlayBrush>
        <SolidColorBrush Opacity="0.8" Color="{StaticResource Gray2}" />
        <!--  or like the MahApps overlay
        <SolidColorBrush Opacity="0.7" Color="{StaticResource BlackColor}" />
        -->
    </simpleChildWindow:ChildWindow.OverlayBrush>
    <Grid 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Background="AliceBlue"
        Height="350"
        Width="450">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
                <RowDefinition Height="50" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Label 
                Grid.Row="0"
                Margin="15,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontWeight="Bold"
                Content="Select Event"/>
            <Border 
                Grid.Row="1"
                Grid.Column="0"
                Height="30"
                Width="300" 
                BorderBrush="Navy" 
                BorderThickness=".5" 
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <ComboBox
                    x:Name="existingLogsCombo"
                    ItemsSource="{Binding Model.ExistingLogs}"
                    SelectedItem="{Binding Model.SelectedLog, Mode=TwoWay}"
                    IsSynchronizedWithCurrentItem="True">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FileName}" />
                                <TextBlock Text="    " />
                                <TextBlock Text="{Binding CreatedDate, StringFormat=d}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
            <Button 
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,20,0"
                Content="Select"
                Width="100"
                Height="30"
                Foreground="Navy"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Command="{Binding Model.SelectLogCommand}"/>
            <Label 
                Grid.Row="3"
                Margin="15,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontWeight="Bold"
                Content="Create New Event"/>
            <TextBox
                Grid.Row="4"
                Width="300"
                Height="30"
                Margin="20,10,0,0"
                Text="{Binding Model.EventName, Mode=OneWayToSource}">
                <TextBox.Style>
                    <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <Style.Resources>
                            <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                <VisualBrush.Visual>
                                    <Label Content="New Event Name" Foreground="LightGray" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button 
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,0,20,0"
                Content="New Log"
                Width="100"
                Height="30"
                Foreground="Navy"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding Model.CreateNewLogCommand}"/>
        </Grid>
    </Grid>
</simpleChildWindow:ChildWindow>
