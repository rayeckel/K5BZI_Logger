<controls:MetroWindow x:Class="K5BZI_Logger.Views.SelectEvent"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Opacity="1">
        <Grid 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Background="AliceBlue"
            Height="200"
            Width="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>
                <Label 
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontWeight="Bold"
                    Content="Event"/>
                <Border Grid.Row="1"
                        Grid.Column="0"
                        Height="30"
                        Width="200" 
                        BorderBrush="Navy" 
                        BorderThickness=".5" 
                        Padding="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <ComboBox
                            x:Name="existingLogsCombo"
                            ItemsSource="{Binding ExistingLogs}"
                            SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
                            IsSynchronizedWithCurrentItem="True">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Text="    " />
                                    <TextBlock Text="{Binding CreatedDate, StringFormat=d}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>
                <Button 
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,0,0,10"
                        Content="Select"
                        Width="100"
                        Height="30"
                        Foreground="Navy"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Command="{Binding SelectLogCommand}"/>
                <Button 
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10,0,0,10"
                        Content="New Log"
                        Width="100"
                        Height="30"
                        Foreground="Navy"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Command="{Binding CreateNewLogCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</controls:MetroWindow>
